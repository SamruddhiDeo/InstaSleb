<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <item android:drawable="@drawable/shadow">
        <shape android:shape="rectangle">
            <gradient android:startColor="#85027D" android:centerColor="#A7039D" android:endColor="#BD04B3"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#FCFF02" android:width="@dimen/_3sdp"/>
            <corners android:radius="@dimen/_31sdp"/>
            <gradient android:startColor="#85027D" android:centerColor="#A7039D" android:endColor="#BD04B3"/>
        </shape>
    </item>
</layer-list>

